@model AppleWebsite.Identity.AppUser
@{
	ViewBag.Title = "Information";
	Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="container rounded bg-white mb-5">
	<div class="row">
		<div class="col-md-3 border-right">
			<div class="d-flex flex-column align-items-center text-center p-3 py-5">
				@if (Model.imgURL == null)
				{
					<img class="rounded-circle mt-5" width="150px" src="~/Avatar/default_user.jpg">
				}
				else
				{
					<img class="rounded-circle mt-5" width="150px" src="~/Avatar/@Model.imgURL">
				}
				<span>
				</span>
				<span>@Model.Fullname</span>
				<span class="text-black-50 ">@Model.Email</span>
			</div>
		</div>
		<div class="col-md-8 border-right ">
			<div class="p-3 py-5">
				<div class="d-flex justify-content-between align-items-center mb-3">
					<h4 class="text-right">Profile Settings</h4>
				</div>
				@using (Html.BeginForm("Information", "Account", FormMethod.Post, new { @class = "", enctype = "multipart/form-data" }))
				{
					<div class="row mt-3">
						<div class="col-md-12 mt-3">
							<label class="labels">User name</label>
							@Html.TextBoxFor(row => row.UserName, new { @class = "form-control shadow-none", @readonly = "", type = "text", placeholder = "Username", value = Model.UserName })
						</div>
						<div class="col-md-12 mt-3">
							<label class="labels">Full name</label>
							@Html.TextBoxFor(row => row.Fullname, new { @class = "form-control shadow-none", type = "text", placeholder = "Full name", value = Model.Fullname })

						</div>
						<div class="col-md-12 mt-3">
							<label class="label">Birthday</label>
							@{
								string s = "";
								if (Model.Birthday != null)
								{

									s = Model.Birthday.Value.ToString("yyyy-MM-dd");
								}
							}

								@Html.TextBoxFor(row => row.Birthday, new { @class = "form-control shadow-none", @Type = "date", placeholder = "Birthday", @Value = @s })
						</div>
						<div class="col-md-12 mt-3">
							<label class="labels">Email</label>
							@Html.TextBoxFor(row => row.Email, new { @class = "form-control shadow-none", type = "Email", placeholder = "Your email", value = Model.Email })
						</div>
						<div class="col-md-12 mt-3">
							<label class="labels">Phone number</label>
							@Html.TextBoxFor(row => row.PhoneNumber, new { @class = "form-control shadow-none", type = "number", placeholder = "Your phone number", value = Model.PhoneNumber })
						</div>
						<div class="col-md-12 mt-3">
							<label class="labels">Address</label>
							@Html.TextBoxFor(row => row.Address, new { @class = "form-control shadow-none", type = "text", placeholder = "Address", value = Model.Address })
						</div>
						<div class="col-md-12 mt-3">
							<label class="labels">City</label>
							@Html.TextBoxFor(row => row.City, new { @class = "form-control  shadow-none", type = "text", placeholder = "City", value = Model.City })
						</div>
						<div class="col-md-12 mt-3">
							<label class="labels">Image Profile</label>
							@Html.TextBoxFor(row => row.imgURL, "", new { @class = "form-control shadow-none", type = "file", name = "imgURL", accept = "image/*" })
						</div>

					</div>

					<div class="mt-5 text-center">
						<button class="btn btn-secondary profile-button shadow-none" type="submit">Save Profile</button>
					</div>
				}

			</div>
		</div>
	</div>
</div>
