@model AppleWebsite.Models.Device
@{
	ViewBag.Title = "Create";
}
<div class="container rounded-5 mt-5" style="margin-top: 100px; background-color: #242526;">
	<a href="@Url.Action("Index","Products")" class="btn-close-white btn-close pull-right mt-5 me-4  shadow-none "></a>

	<div class="row">
		

		<div class="col-md-12 border-right ">
			<div class="p-3 py-5">
				<div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right text-light">Thêm thiết bị mới</h4>
				</div>
				@using (Html.BeginForm("Create", "Products", new { area = "admin" }, FormMethod.Post, new { @class = "", enctype = "multipart/form-data" }))
				{
					<div class="row mt-3">
						<div class="col-md-12 mt-3">
                            <label class="labels">Tên thiết bị</label>
							@Html.TextBoxFor(row => row.name_dev, new { @class = "form-control shadow-none", type = "text", placeholder = "Tên thiết bị" })
						</div>
						<div class="row pe-0">
							<div class="col-md-6 mt-3">
                                <label class="labels">Giá</label>
								@Html.TextBoxFor(row => row.cost, new { @class = "form-control shadow-none", type = "number", placeholder = "Giá" })

							</div>
							<div class="col-md-6 mt-3 px-0">
								<label class="labels ">Hãng</label>
								@Html.DropDownListFor(row => row.id_cate, new SelectList(ViewBag.Category, "id_cate", "name_cate"), new { @class = "form-select shadow-none" })
							</div>
						</div>

						<div class="col-md-12 mt-3">
							<label class="labels">Dung lương</label>
							@Html.TextBoxFor(row => row.storage, new { @class = "form-control shadow-none", type = "text", placeholder = "Dung lương" })
						</div>
						<div class="col-md-12 mt-3">
                            <label class="labels">Hình ảnh thiết bị</label>
							@Html.TextBoxFor(row => row.img, "", new { @class = "form-control shadow-none", type = "file", name = "img", accept = "image/*" })
						</div>
					</div>

					<div class="mt-5 text-center">
						<button class="btn btn-secondary profile-button shadow-none" type="submit">Lưu</button>
					</div>
				}
			</div>
		</div>
	</div>
</div>

